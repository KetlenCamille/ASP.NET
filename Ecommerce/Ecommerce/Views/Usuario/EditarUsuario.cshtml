@using Ecommerce.Models
@model Usuario
@{
    Usuario usuario = ViewBag.Usuarios;
}
<div>
    @using (Html.BeginForm("EditarUsuario", "Usuario", FormMethod.Post, new { @class = "form-horizontal" }))
    {
    <fieldset>
        <legend style="margin-left:20px">ALterar Usuário</legend>
        @*Passando o id para o controller*@
        @Html.HiddenFor(model => model.UsuarioId)

        <div class="form-group" style="margin-left:40px">

            @Html.Label("Nome do Usuário:", new { @class = "control-label col-sm-2" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Seu nome" })
            </div>
        </div>
        <div class="form-group" style="margin-left:40px">
            @Html.Label("E-mail do Usuário: ", new { @class = "control-label col-sm-3" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Seu e-mail" })
            </div>
        </div>
        <div class="form-group" style="margin-left:40px">
            @Html.Label("Senha do Usuário: ", new { @class = "control-label col-sm-3" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", @placeholder = "Sua senha" })
            </div>
        </div>
    </fieldset>
        <br>
        <div class="form-group" style="margin-left:40px">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <input type="reset" value="Resetar" class="btn btn-secondary" />
            </div>
        </div>
    }
</div>