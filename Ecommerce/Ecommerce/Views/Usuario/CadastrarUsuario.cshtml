@model Ecommerce.Models.Usuario
<div>
    @using (Html.BeginForm("CadastrarUsuario", "Usuario", FormMethod.Post, new { @class = "form-horizontal" }))
    {
    <fieldset>
        <legend style="margin-left:20px">Cadastrar Usuário</legend>

        <div class="form-group" style="margin-left:40px">

            @Html.LabelFor(model => model.Nome, new { @class = "control-label col-sm-3" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Seu nome" })
                @Html.ValidationMessageFor(model => model.Nome, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="margin-left:40px">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-sm-3" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Seu e-mail" })
                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group" style="margin-left:40px">
            @Html.LabelFor(model => model.Senha, new { @class = "control-label col-sm-3" })
            <div class="col-sm-10">
                @Html.TextBoxFor(model => model.Senha, new { @class = "form-control", @placeholder = "Sua Senha" })
                @Html.ValidationMessageFor(model => model.Senha, null, new { @class = "text-danger" })
            </div>
        </div>
    </fieldset>
        <br>
        <div class="form-group" style="margin-left:40px">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <input type="reset" value="Resetar" class="btn btn-secondary" />
            </div>
        </div>
    }
</div>

