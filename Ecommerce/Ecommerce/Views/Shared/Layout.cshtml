@using Ecommerce.DAO
@{
    ItemVendaDAO itemVendaDAO = new ItemVendaDAO();
    int quantidade = itemVendaDAO.QuantidadeItensCarrinho();
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        @Html.ActionLink("Ecommerce", "Index", "Home", null, new { @class = "navbar-brand" })
        @Html.ActionLink("Gerenciamento Categorias", "Index", "Categoria", null, new { @class = "navbar-brand" })
        @Html.ActionLink("Gerenciamento Produtos", "Index", "Produto", null, new { @class = "navbar-brand" })
        @Html.ActionLink("Meu Carrinho " + "{ " + @quantidade + " itens } ", "CarrinhoCompras", "Home", null, new { @class = "navbar-brand" })
    </nav>
    <div id="content" class="container" style="margin-top:30px"> </div>
        <div>
            @RenderBody()
        </div>

        <hr style="margin-top:30px" />
        <footer style="text-align:center" class="footer navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - Desenvolvido por Ketlen Rieper</p>
        </footer>
</body>
</html>
