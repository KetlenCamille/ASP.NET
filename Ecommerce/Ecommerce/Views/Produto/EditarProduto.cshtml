@using Ecommerce.Models
@{
    Produto produto = ViewBag.Produto;
}
<div style="margin:20px">
    <h3>Editar Produto</h3>
</div>

<div>
    @using (Html.BeginForm())
    {
        <div class="form-group" style="margin-left:40px">
            @Html.Hidden("idProduto", produto.IdProduto)

            @Html.Label("Código Produto")
            @Html.TextBox("id02", produto.IdProduto, new { @disabled = ""}) <br>

            @Html.Label("Nome do Produto") <br>
            @Html.TextBox("nomeProduto", produto.Nome) <br>

            @Html.Label("Descrição") <br>
            @Html.TextBox("descricaoProduto", produto.Descricao) <br>

            @Html.Label("Preço") <br>
            @Html.TextBox("precoProduto", produto.Preco) <br>

            @Html.Label("Categoria") <br>
            @Html.TextBox("categoriaProduto", produto.Categoria) <br>
        </div>

        <div class="form-group" style="margin-left:40px">
            <input type="submit" value="Salvar" />
        </div>
    }
</div>