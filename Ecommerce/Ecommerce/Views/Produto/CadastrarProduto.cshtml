
@{
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div style="margin:20px">
</div>
<div>
    @using (Html.BeginForm("CadastrarProduto", "Produto", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
                <legend style="margin-left:20px">Cadastrar Produto</legend>
            <div class="form-group" style="margin-left:40px">
                @Html.Label("Nome do Produto:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("nomeProduto", null, new { @class = "form-control", @placeholder = "Nome do Produto" })
                </div>
            </div>
            <div class="form-group" style="margin-left:40px">
                @Html.Label("Descrição do Produto: ", new { @class = "control-label col-sm-3" })
                <div class="col-sm-10">
                    @Html.TextBox("descricaoProduto", null, new { @class = "form-control", @placeholder = "Descrição do Produto" })
                </div>
            </div>
            <div class="form-group" style="margin-left:40px">
                @Html.Label("Preço:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("precoProduto", null, new { @class = "form-control", @placeholder = "Preço do Produto" })
                </div>
            </div>
            <div class="form-group" style="margin-left:40px">
                @Html.Label("Categoria:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBox("categoriaProdudo", null, new { @class = "form-control", @placeholder = "Categoria do Produto" })
                </div>
            </div>
        </fieldset>
        <br>
        <div class="form-group" style="margin-left:40px">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
                <input type="reset" value="Resetar" class="btn btn-secondary" />
            </div>
        </div>
    }
</div>
