@using Ecommerce.Models
@model Categoria
@{
    Categoria categoria = ViewBag.Categoria;
}
<div>
    @using (Html.BeginForm("EditarCategoria", "Categoria", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        <fieldset>
            <legend style="margin-left:20px">ALterar Categoria</legend>
            @*Passando o id para o controller*@
            @Html.HiddenFor(model => model.idCategoria)

            <div class="form-group" style="margin-left:40px">

                @Html.Label("Nome da Categoria:", new { @class = "control-label col-sm-2" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Nome, new { @class = "form-control", @placeholder = "Nome da Categoria" })
                </div>
            </div>
            <div class="form-group" style="margin-left:40px">
                @Html.Label("Descrição da Categoria: ", new { @class = "control-label col-sm-3" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(model => model.Descricao, new { @class = "form-control", @placeholder = "Descrição da Categoria" })
                </div>
            </div>
        </fieldset>
        <br>
        <div class="form-group" style="margin-left:40px">
            <div class="col-sm-offset-2 col-sm-10">
                <input type="submit" value="Salvar" class="btn btn-primary" />
                <input type="reset" value="Resetar" class="btn btn-secondary" />
            </div>
        </div>
    }
</div>
